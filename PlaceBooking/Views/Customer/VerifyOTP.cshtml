                    </div>
                    <div class="form-group col-md-3 col-xs-6">
                        <a style="margin-top:20px;" class="btn-blue btn-style-1 pt-2" href="~/Customer/GoogleLogin">  <i class="fab fa-google"></i> Đăng nhập với google</a>
                    </div>
                </div>
            </div>
            <div class="container ">
                <div class="row">
                    <div class="col-md-10">
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
