@model PlaceBooking.Models.Order
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
    var service = ViewBag.Service1;
    var menu = ViewBag.Menu1;
}
<section class="booking" style="padding-bottom:50px;">
    <div class="container bg-white" style="padding-bottom:50px;>
        <div class="row">
            <div class="col-md-8">
                <div class="booking-confirmed booking-outer">
                    <div class="confirmation-title">
                        <div class="form-title form-title-1">
                            <h2 class="text-danger">Tạo hợp đồng thành công</h2>
                        </div>
                       @* <p class="text-success">Thông tin cụ thể đã được gửi tới email của bạn.</p>*@
                        <div class="payment-info detail">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="confirmation-details detail">
                                        <h3>Chi tiết Booking</h3>
                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td class="title">Mã hợp đồng</td>
                                                    <td class="b-id">@Model.Code</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Tên khách hàng</td>
                                                    <td>@Model.Name </td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Email</td>
                                                    <td>@Model.Email</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">SDT</td>
                                                    <td>@Model.Phone</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Giới tính</td>
                                                    <td>@Model.Gioitinh</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Quốc tịch</td>
                                                    <td>@Model.Quoctich</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Thời gian (yyyy-MM-dd)</td>
                                                    <td class="text-danger">@Model.DepartureDate.ToString("yyyy-MM-dd")</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Khung giờ</td>
                                                    <td class="text-danger">@Model.Scope</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Ghi chú</td>
                                                    <td>@Model.Mess</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Ngày tạo</td>
                                                    <td>@Model.CreateDate</td>
                                                </tr>
                                                @if (Model.StatusPayment == 1)
                                                {
                                                    <tr>
                                                        <td class="title">Trạng thái thanh toán</td>
                                                        <td class="text-success">Đã thanh toán <i class="fas fa-check"></i></td>
                                                    </tr>
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td class="title">Trạng thái thanh toán</td>
                                                        <td>Chưa thanh toán vui lòng thanh toán lại.</td>
                                                    </tr>

                                                }
                                                <tr>
                                                    <td class="title">Phương thức thanh toán:</td>
                                                    <td>@Model.DeliveryPaymentMethod.</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Tổng tiền:</td>
                                                    <td><h4 class="text-danger"> @Model.Total.ToString("N0") VND</h4></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div> 
            <div class="col-md-4">
                @if (service != null)
                {
                    <div class="col-md-12">
                        <div style="margin-left:20px;">
                            <h4 class="text-success p-3"> Thông tin dịch vụ </h4>
                        </div>
                        <table>
                            @foreach (var item in service)
                            {
                                <tbody>
                                    <tr>
                                        <td class="title text-danger" style="font-weight:bold">Tên dịch vụ</td>
                                        <td>@item.Name</td>
                                    </tr>
                                    <tr>
                                        <td class="title">Giá tiền</td>
                                        <td class="b-id text-danger">@item.Price.ToString("N0") VND</td>
                                    </tr>
                                    <tr>
                                        <td class="title"> Chi tiết</td>
                                        <td class="b-id text-danger">@Html.Raw(item.Details)</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                }
                @if (menu != null)
                {
                    <div class="col-md-12">
                        <div style="margin-left:20px;">
                            <h4 class="text-success p-3"> Thông tin Menu </h4>
                        </div>
                        <table>
                            @foreach (var item in menu)
                            {
                                <tbody>
                                    <tr>
                                        <td class="title text-danger" style="font-weight:bold">Tên menu</td>
                                        <td>@item.Name</td>
                                    </tr>
                                    <tr>
                                        <td class="title">Giá tiền</td>
                                        <td class="b-id text-danger">@item.Price.ToString("N0") VND</td>
                                    </tr>
                                    <tr>
                                        <td class="title"> Chi tiết</td>
                                        <td class="b-id text-danger">@Html.Raw(item.Details)</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                }
                </div>
        </div>
    </div>
</section>