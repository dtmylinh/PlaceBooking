@model IEnumerable<PlaceBooking.Models.Post>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
}

<section class="mt_search" style="margin-top:50px !important; ">
    <div class="container card bg-white" style="padding:30px !important; ">
        <div class="search-content-slider">
            <div class="section-title text-center ">
                <h2>TÌM KIẾM ĐỊA ĐIỂM CỦA BẠN</h2>
                <p>Yatra.com - Hệ thống đặt địa điểm lớn nhất Việt Nam.</p>
            </div>
            <form action="~/Site/roomSearch" method="POST" id="form-search">
                <div class="radio" align="center">
                    <label><input value="1" type="radio" id="typeticket" name="noithat" checked>Tiệc cưới</label>
                    <label><input value="0" type="radio" id="typeticket" name="noithat">Sinh nhật</label>
                    <label><input value="2" type="radio" id="typeticket" name="noithat">Sự kiện</label>
                    <label><input value="3" type="radio" id="typeticket" name="noithat">Khác</label>
                </div>
                <input type="hidden" id="ticketCheck" value="" />

                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="table_item">
                            <div class="form-group">
                                <select name="departure_address" class=" form-control" tabindex="1" required>
                                    <option value="TP.Hồ Chí Minh" selected="selected">TP.Hồ Chí Minh</option>
                                    <option value="Hà Nội">Hà Nội</option>
                                    <option value="Vân Đồn">Vân Đồn</option>
                                    <option value="Hải Phòng">Hải Phòng</option>
                                    <option value="Thanh Hóa">Thanh Hóa</option>
                                    <option value="Vinh">Vinh</option>
                                    <option value="Đồng Hới">Đồng Hới</option>
                                    <option value="Huế">Huế</option>
                                    <option value="Đà Nẵng">Đà Nẵng</option>
                                    <option value="Chu Lai">Chu Lai</option>
                                    <option value="Quy Nhơn">Quy Nhơn</option>
                                    <option value="Tuy Hòa">Tuy Hòa</option>
                                    <option value="Nha Trang">Nha Trang</option>
                                    <option value="Đà Lạt">Đà Lạt</option>
                                    <option value="Pleiku">Pleiku</option>
                                    <option value="Ban Mê Thuột">Ban Mê Thuột</option>
                                    <option value="Cần Thơ">Cần Thơ (VCA)</option>
                                </select>
                                <i class="flaticon-maps-and-flags"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="table_item">
                            <div class="form-group">
                                <select name="songuoi" class=" form-control" tabindex="1">
                                    <option value="2">Số người (Mặc định 100)</option>
                                    <option value="1">50</option>
                                    <option value="2">100</option>
                                    <option value="3">200</option>
                                    <option value="4">400</option>
                                    <option value="5">500</option>
                                    <option value="6">600</option>
                                    <option value="7">800</option>
                                    <option value="8">1000</option>
                                    <option value="9">Trên 1000</option>
                                </select>
                                <i class="flaticon-box"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="table_item">
                            <div class="form-group">
                                <select name="soTienTu" class=" form-control" tabindex="1">
                                    <option value="1000000">Số tiền từ 1.000.000 VND</option>
                                    <option value="2000000">Số tiền từ 20.000.000 VND</option>
                                    <option value="3000000">Số tiền từ 30.000.000 VND</option>
                                    <option value="4000000">Số tiền từ 40.000.000 VND</option>
                                    <option value="5000000">Số tiền từ 50.000.000 VND</option>
                                    <option value="6000000">Số tiền từ 60.000.000 VND</option>
                                    <option value="7000000">Số tiền từ 70.000.000 VND</option>
                                    <option value="8000000">Số tiền từ 80.000.000 VND</option>
                                    <option value="9000000">Số tiền từ 90.000.000 VND</option>
                                    <option value="10000000">Số tiền từ 100.000.000 VND</option>
                                </select>
                                <i class="flaticon-box"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="table_item">
                            <div class="form-group">
                                <select name="soTienDen" class=" form-control" tabindex="1">
                                    <option value="2000000">Số tiền đến 20.000.000 VND</option>
                                    <option value="3000000">Số tiền đến 30.000.000 VND</option>
                                    <option value="4000000">Số tiền đến 40.000.000 VND</option>
                                    <option value="5000000">Số tiền đến 50.000.000 VND</option>
                                    <option value="6000000">Số tiền đến 60.000.000 VND</option>
                                    <option value="7000000">Số tiền đến 70.000.000 VND</option>
                                    <option value="8000000">Số tiền đến 80.000.000 VND</option>
                                    <option value="9000000">Số tiền đến 90.000.000 VND</option>
                                    <option value="10000000">Số tiền đến 100.000.000 VND</option>
                                </select>
                                <i class="flaticon-box"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12  ">
                        <div class="table_item " align="center">
                            <div class="search ">
                                <button type="submit" class="btn-blue btn-red ">TIM KIẾM ĐỊA ĐIỂM SỰ KIỆN</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Top Destinations -->
<section class="top-destination">
    <div class="container">
        <div class="section-title text-center">
            <h2>Các chuyến bay nổi bật</h2>
            <a href="#">Xem tất cả các review nổi bật <i class="fa fa-long-arrow-right"></i></a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <div class="destination-item box-item">
                        <div class="destination-image">
                            <img src="~/public/images/post/@item.Img" alt="Image">
                        </div>
                        <div class="destination-content">
                            <h6>VÉ MỘT CHIỀU</h6>
                            <h3><a href="~/chi-tiet-bai-viet/@item.Slug">@item.Title</a></h3>
                            <p class="package-days1"><i class="flaticon-time"></i>Ngày tạo: @item.CreatedAt.ToString("dd-MM-yyyy")</p>
                            <div class="deal-rating">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                            </div>
                            <div class="tour-price">
                                <a href="~/chi-tiet-bai-viet/@item.Slug"><span class="tour-tail">Xem Ngay</span></a>
</div>
                        </div>
                    </div>
                </div>
            }
            </div>
    </div>
</section>

<script>
    $("#form-search").submit(function (event) {
        $("#ngaybay").text("");
        $("#ngayve").text("");
        var ngaybay = $("#departure_date").val();
        var ngayve = $("#arrival_date").val();
        var typeticket = $("#ticketCheck").val();
        if (ngaybay == "Chọn ngày") {
            $("#ngaybay").text("Vui lòng chọn ngày khởi hành");
            return false;
        }
        if (typeticket == 2) {
            if (ngayve == "Ngày về") {
                $("#ngayve").text("Vui lòng chọn ngày về");
                return false
            }
            else {
                return true;
            }
        }
        return true;
    });
    $(document).ready(function () {
        // By Default Disable radio button
        $("#arrival_date").attr('disabled', true);
        $("form input:radio").change(function () {
            if ($(this).val() == "enable") {
                $("#arrival_date").attr('disabled', false);
                $("#ticketCheck").val(2);
            }
            else {
                $("#arrival_date").attr('disabled', true);
                $("#ticketCheck").val(1);
            }
        });
    });
</script>

<script src="~/public/js/main.js"></script>
